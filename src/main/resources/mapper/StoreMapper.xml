<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.project.mapper.StoreMapper">

    <!-- 특정 store_id를 기반으로 매장 정보를 조회하는 쿼리 -->
    <select id="getStoreDetailById" parameterType="int" resultType="com.project.domain.StoreDomain">
        SELECT * FROM store_detail WHERE id = #{storeId}
    </select>

</mapper>